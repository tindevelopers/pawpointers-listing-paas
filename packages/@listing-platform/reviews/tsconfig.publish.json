{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-publish/dist",
    "declaration": true,
    "declarationDir": "./dist-publish/dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-publish",
    "scripts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}

