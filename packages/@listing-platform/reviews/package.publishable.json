{
  "name": "@tindeveloper/reviews-sdk",
  "version": "1.0.0",
  "private": false,
  "description": "Platform-agnostic Reviews and Ratings SDK for React",
  "author": "Tin Developers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tindevelopers/listing-paas-base.git",
    "directory": "packages/@listing-platform/reviews"
  },
  "homepage": "https://github.com/tindevelopers/listing-paas-base/tree/main/packages/@listing-platform/reviews#readme",
  "bugs": {
    "url": "https://github.com/tindevelopers/listing-paas-base/issues"
  },
  "keywords": [
    "reviews",
    "ratings",
    "sdk",
    "react",
    "headless",
    "components",
    "platform-agnostic",
    "listing-platform",
    "external-reviews",
    "google-reviews"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./headless": {
      "import": "./dist/headless/index.mjs",
      "require": "./dist/headless/index.js",
      "types": "./dist/headless/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./styles.css": "./dist/styles/reviews.css"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": [
    "*.css"
  ],
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
