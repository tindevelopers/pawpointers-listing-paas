{
  "name": "@listing-platform/reviews",
  "version": "1.0.0",
  "private": true,
  "description": "Reviews and ratings SDK for listing platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./headless": "./dist/headless/index.js",
    "./components": "./dist/components/index.js",
    "./hooks": "./dist/hooks/index.js",
    "./types": "./dist/types/index.js",
    "./styles": "./dist/styles/reviews.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "publish:prepare": "tsx scripts/sync-and-publish.ts --prepare",
    "publish:npm": "tsx scripts/sync-and-publish.ts --publish",
    "publish:dry-run": "tsx scripts/sync-and-publish.ts --dry-run"
  },
  "dependencies": {
    "@listing-platform/design-tokens": "workspace:*",
    "@listing-platform/shared": "workspace:*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "tsup": "^8.0.0",
    "tsx": "^4.19.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/node": "^20"
  }
}
