{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "cd ../.. && pnpm turbo build --filter=@tinadmin/portal",
  "installCommand": "cd ../.. && pnpm install",
  "outputDirectory": ".next",
  "rewrites": [
    // API server is deprovisioned - removed rewrite rule
    // Uncomment and update destination if API server is provisioned later:
    // {
    //   "source": "/api/v1/:path*",
    //   "destination": "https://api.yourplatform.com/api/:path*"
    // }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/:all*(svg|jpg|jpeg|png|webp|avif|ico|woff|woff2)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "crons": []
}
