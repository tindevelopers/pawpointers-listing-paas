{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STAFF_SUPABASE_URL",
        "NEXT_PUBLIC_STAFF_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_KEY",
        "SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_CDN_URL",
        "ROUTING_STRATEGY",
        "TYPESENSE_API_KEY",
        "TYPESENSE_HOST",
        "OPENAI_API_KEY",
        "WASABI_ACCESS_KEY",
        "WASABI_SECRET_KEY",
        "WASABI_BUCKET",
        "REVALIDATION_SECRET",
        "VERCEL",
        "VERCEL_ENV",
        "VERCEL_URL",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STAFF_SUPABASE_URL",
        "NEXT_PUBLIC_STAFF_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "SUPABASE_URL",
        "SUPABASE_SERVICE_KEY",
        "SUPABASE_ANON_KEY",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
        "STRIPE_SECRET_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_SITE_URL",
        "NEXT_PUBLIC_CDN_URL",
        "ROUTING_STRATEGY",
        "TYPESENSE_API_KEY",
        "TYPESENSE_HOST",
        "OPENAI_API_KEY",
        "WASABI_ACCESS_KEY",
        "WASABI_SECRET_KEY",
        "WASABI_BUCKET",
        "REVALIDATION_SECRET",
        "PORT",
        "ALLOWED_ORIGINS",
        "NODE_ENV"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}

